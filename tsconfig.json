{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "sourceMap": false,
    "declaration": false,
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": false,
    "inlineSources": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "esnext"
    ],
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": [
      "node",
      "joi",
      "jwt-decode"
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*"
  ]
}
